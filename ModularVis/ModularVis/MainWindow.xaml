<Window x:Class="ModularVis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModularVis"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowState="Maximized">
    <Canvas Name="canv">
        <TextBox Panel.ZIndex="100" Name="SmoothEnter" Width="100" PreviewKeyDown="SmoothEnter_PreviewKeyDown"></TextBox>
        <TextBox Panel.ZIndex="100" Name="SizeEnter" Width="100" Canvas.Top="20" PreviewKeyDown="SizeEnter_PreviewKeyDown"></TextBox>
        <TextBox Panel.ZIndex="100" Name="OpacityEnter" Width="100" Canvas.Top="40" PreviewKeyDown="OpacityEnter_PreviewKeyDown"></TextBox>
    </Canvas>
</Window>
